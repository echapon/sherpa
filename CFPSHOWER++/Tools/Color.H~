#ifndef CFPShower_Tools_Color_H
#define CFPShower_Tools_Color_H

#include "ATOOLS/Phys/Flow.H"

namespace CFPSHOWER {
  struct Color {
  public:
    unsigned int m_trip, m_anti;
    Color(const unsigned int & trip=0, const unsigned int & anti=0) :
      m_trip(trip), m_anti(anti) {}
    Color(const Color & color) :
      m_trip(color.m_trip), m_anti(color.m_anti) {}
  };
  std::ostream &operator<<(std::ostream & s,const Parton & Color);
}

#endif
